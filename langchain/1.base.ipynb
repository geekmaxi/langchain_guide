   "source": [
    "from langchain import ConversationChain\n",
    "from pprint import pprint\n",
    "from chat_model_client import get_deepseek\n",
    "\n",
    "# 初始化 LLM\n",
    "llm = get_deepseek()\n",
    "\n",
    "# 创建对话链\n",
    "conversation = ConversationChain(llm=llm)\n",
    "\n",
    "# 进行对话\n",
    "response = conversation.invoke(\"你好，介绍一下 LangChain。\")\n",
    "pprint(response)"
   ]
